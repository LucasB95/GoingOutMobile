<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoingOutMobile.Views.RestaurantFindListPage"
             xmlns:model="clr-namespace:GoingOutMobile.Models.Restaurant"
             xmlns:vm="clr-namespace:GoingOutMobile.ViewModels"
             x:DataType="vm:RestaurantFindListViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Shell.NavBarIsVisible="false" 
             Title="RestaurantFindListPage">


    <AbsoluteLayout VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">
        <VerticalStackLayout 
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                >
            <Grid
            BackgroundColor="{StaticResource Primary}"
            >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ImageButton 
                Grid.Column="0"
                Source="left_arrow_icon"
                HeightRequest="30"
                WidthRequest="30"
                HorizontalOptions="Center"
                Command="{Binding GetBackEventCommand}"
                />

                <SearchBar  
                       Grid.Column="1"
                       Margin="5"
                       TextColor="Black"
                       BackgroundColor="White"
                       Placeholder="Buscar Restaurant"                    
                       Text="{Binding SearchText,Mode=TwoWay}"
                       >
                    <SearchBar.Behaviors>

                        <toolkit:UserStoppedTypingBehavior                             
                            Command="{Binding EjecutarBusqueda}"
                            StoppedTypingTimeThreshold="1000"
                            MinimumLengthThreshold="3"
                            ShouldDismissKeyboardAutomatically="True"                            
                        />


                    </SearchBar.Behaviors>

                </SearchBar>
            </Grid>

            <CollectionView
            Margin="10"
            SelectionMode="Single"
            ItemsSource="{Binding Restaurant}"
            SelectedItem="{Binding RestaurantSelected, Mode=TwoWay}"
            >
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="20" Orientation="Vertical" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>

                    <DataTemplate x:DataType="model:RestaurantResponse">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <Frame 
                        Grid.Column="0"
                        CornerRadius="10"   
                        Padding="0"
                        IsClippedToBounds="True"
                           >
                                <Image 
                            HeightRequest="150"
                            WidthRequest="150"
                            Aspect="Fill"
                            Source="foto_resto.png"
                            />
                            </Frame>
                            <StackLayout 
                        Grid.Column="1" 
                        Padding="15"
                        Spacing="10"
                                 >
                                <Label 
                            FontSize="Small"
                            Text="{Binding BusinessName}"
                            />
                                <HorizontalStackLayout>
                                    <Label 
                            FontSize="Small"
                            Padding="0,0,5,0"
                            Text="{Binding Adress.Province}"
                            />
                                    <Label 
                            FontSize="Small"
                            Text="{Binding Adress.Location}"
                            />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Padding="0,0,0,0">
                                    <Label 
                            FontSize="Small"
                            Text="{Binding Adress.Street}"
                            Padding="0,0,5,0"
                            />
                                    <Label 
                            FontSize="Small"
                            Text="{Binding Adress.Numeration}"
                            />

                                </HorizontalStackLayout>
                                <Label 
                            FontSize="Small"
                            Text="{Binding Adress.PC}"
                            />
                            </StackLayout>
                        </Grid>

                    </DataTemplate>

                </CollectionView.ItemTemplate>

            </CollectionView>


        </VerticalStackLayout>
        <AbsoluteLayout
                    AbsoluteLayout.LayoutBounds="0.5,0.5,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    IsVisible="True">
            <ActivityIndicator Color="Teal"
                           AbsoluteLayout.LayoutBounds="0.5,0.5,0.1,0.1"
                           AbsoluteLayout.LayoutFlags="All"
                           IsVisible="True"
                           IsRunning="{Binding IsActivity}"/>
        </AbsoluteLayout>

    </AbsoluteLayout>
    
    
</ContentPage>